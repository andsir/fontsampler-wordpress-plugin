{% extends 'options-row.twig' %}

{% block label %}{{ description }}{% endblock %}

{% block custom %}
    <label class="fontsampler-radio">
        <input type="radio" name="{{ name }}_use_default" value="0"
                {% if value is not empty %} checked="checked" {% endif %}>
        <span class="setting-description">Use custom value<br>
        <small>{{ additional|raw }}</small></span>
        <input type="text" name="{{ name }}" value="{{ value }}"/>
    </label>
{% endblock %}

{% block default %}
    <label class="fontsampler-radio">
        <input type="radio" name="{{ name }}_use_default" value="1"
                {% if value is empty %} checked="checked" {% endif %}>
        <span>Use default: {{ default }}</span>
    </label>
{% endblock %}
